{
	"name": "menhir-lsp-client",
	"displayName": "Menhir",
	"description": "IntelliSense for Menhir grammars and ocamllex lexers",
	"version": "0.1.1",
	"publisher": "dalps",
	"private": true,
	"license": "GPL-2.0-only",
	"icon": ".fileicons/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/dalps/menhir-lsp"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:ocaml.menhir",
		"onLanguage:ocaml.ocamllex"
	],
	"contributes": {
		"languages": [
			{
				"id": "ocaml.menhir",
				"icon": {
					"dark": ".fileicons/menhir.svg",
					"light": ".fileicons/menhir.svg"
				}
			},
			{
				"id": "ocaml.ocamllex",
				"icon": {
					"dark": ".fileicons/ocamllex.svg",
					"light": ".fileicons/ocamllex.svg"
				}
			}
		],
		"commands": [
			{
				"title": "Menhir: Show Menhir Language Server Output",
				"command": "menhir-lsp-client.showOutput"
			},
			{
				"title": "Menhir: Restart Language Server",
				"enablement": "never",
				"command": "menhir-lsp-client.showOutput"
			},
			{
				"title": "Menhir: prompt for an alias",
				"enablement": "never",
				"command": "menhir-lsp-client.promptAlias"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "just bundle",
		"build": "just bundle",
		"debug": "just build",
		"watch": "just watch"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@types/vscode": "^1.73.0",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	}
}
